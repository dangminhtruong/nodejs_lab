<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Nodejs</title>
    <%- include('blocks/links') %>
</head>
<body>
	<%- include('blocks/header') %>
	<div class="inner-header">
		<div class="container">
			<div class="pull-left">
				<h6 class="inner-title">Shopping Cart</h6>
			</div>
			<div class="pull-right">
				<div class="beta-breadcrumb font-large">
					<a href="/">Home</a> / <span>Shopping Cart</span>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	
	<div class="container">
		<div id="content">
			
			<div class="table-responsive">
				<!-- Shop Products Table -->
				<table class="shop_table beta-shopping-cart-table" cellspacing="0">
					<thead>
						<tr>
							<th class="product-name">Product</th>
							<th class="product-price">Price</th>
							<th class="product-quantity">Qty</th>
							<th class="product-remove">Remove</th>
						</tr>
					</thead>
					<tbody>
						<% for(i in cartContent) { %>
							<tr class="cart_item">
								<td class="product-name">
									<div class="media">
										<img class="pull-left" src='/images/product/<%= cartContent[i].image %>' height="50px">
										<div class="media-body">
											<p class="font-large table-title"><%= cartContent[i].name %></p>
										</div>
									</div>
								</td>
	
								<td class="product-price">
									<span class="amount"><%= cartContent[i].unit_price %> vnÄ‘</span>
								</td>
	
								<td class="product-quantity">
									<input type="text" id="product-qty" style="max-width: 100px;"/>
								</td>
	
								<td class="product-remove">
									<a href="#" class="remove" title="Remove this item"><i class="fa fa-trash-o"></i></a>
								</td>
							</tr>
						<% } %>
					</tbody>

					<tfoot>
						<tr>
							<td colspan="6" class="actions">
							</td>
						</tr>
					</tfoot>
				</table>
				<!-- End of Shop Table Products -->
			</div>


			<!-- Cart Collaterals -->
			<div class="cart-collaterals">
				<!-- <form class="shipping_calculator pull-left" action="#" method="post">
				</form> -->
				<div class="cart-totals pull-right">
					<div class="cart-totals-row"><h5 class="cart-total-title">Cart Totals</h5></div>
					<div class="cart-totals-row"><span>Cart Subtotal:</span> <span>$188.00</span></div>
					<div class="cart-totals-row"><span>Shipping:</span> <span>Free Shipping</span></div>
					<div class="cart-totals-row"><span>Order Total:</span> <span>$188.00</span></div>
				</div>

				<div class="clearfix"></div>
			</div>
			<!-- End of Cart Collaterals -->
			<div class="clearfix"></div>

		</div> <!-- #content -->
	</div> <!-- .container -->
    <%- include('blocks/footer') %>
	<%- include('blocks/links_javascript') %>
</body>
</html>