<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs </title>
	<%- include('blocks/links') %>
</head>
<body>
    <%- include('blocks/header') %>
	<div class="inner-header">
		<div class="container">
			<div class="pull-left">
				<h6 class="inner-title">Đăng nhập</h6>
			</div>
			<div class="pull-right">
				<div class="beta-breadcrumb">
					<a href="/">Home</a> / <span>Đăng nhập</span>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	
	<div class="container">
		<div id="content">
            <% if(typeof loginErrors !== 'undefined') { %>
                <div class="alert alert-danger">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Failer ! </strong> <%= loginErrors %>
                </div>
            <% } %>
			<form action="/users/login" method="post" class="beta-form-checkout">
				<div class="row">
					<div class="col-sm-3"></div>
					<div class="col-sm-6">
						<h4>Đăng nhập</h4>
						<div class="space20">&nbsp;</div>
						<div class="form-block">
							<label for="email">Email address*</label>
							<input type="email" id="email" name="userEmail" required>
						</div>
						<div class="form-block">
							<label for="phone">Password*</label>
							<input type="text" id="password" name="userPass" required>
						</div>
						<div class="form-block">
							<button type="submit" class="btn btn-primary">Login</button>
						</div>
					</div>
					<div class="col-sm-3"></div>
				</div>
			</form>
		</div> <!-- #content -->
	</div> <!-- .container -->

    <%- include('blocks/footer') %>
	<%- include('blocks/links_javascript') %>
</body>
</html>