<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Nodejs </title>
	<%- include('blocks/links') %>
</head>
<body>
    <%- include('blocks/header') %>
    <div class="container">
        <div class="col-md-12" id="profile_pages">
            <div class="col-md-4 left_profile">
				<div class="col-md-12">
					<div class="col-md-12">
						<div  align="left"> <img alt="User Pic" src="/images/avata/<%= userInfo.avata %>" id="profile-image1" class="img-circle img-responsive" > 
                			<form action="{!! URL::route('postChangeAvata') !!}" method="post" enctype="multipart/form-data">
                				<input id="profile-image-upload" name="profile-image-upload" class="hidden" type="file">
                				<button type="submit" style="display: none" id="submit_change_avata"></button>
                			</form>
							<div style="color:#999;" >click here to change profile image</div>
                     	</div>
					</div>
					<div class="col-md-12">
						<b>Họ tên:  <%= userInfo.full_name %></b>
					</div>
					<div class="col-md-12">
						<b>Địa chỉ: <%= userInfo.address %></b>
					</div>
					<div class="col-md-12">
						<b>SĐT:  <%= userInfo.phone %></b>
					</div>
					<div class="col-md-12">
						<b>email : <%= userInfo.email %></b>
					</div>
						<div class="col-md-12 row">
							<a class="btn btn-link" href="#">Đi đến trang quản trị</a>
						</div>
				</div>
				<div class="col-md-12">
					
				</div>
			</div>
            <div class="col-md-8 row">
                <ul class="nav nav-tabs">
                  <li class="active"><a data-toggle="tab" href="#home">Lịch sửa mua hàng</a></li>
                  <li><a data-toggle="tab" href="#menu1">Chỉnh sửa trang cá nhân</a></li>
                  <li><a data-toggle="tab" href="#menu2">Đổi mật khẩu</a></li>
                </ul>
                <div class="tab-content">
                  <div id="home" class="tab-pane fade in active">
                        <div class="col-md-12" id="hienThiDonHang">
                           <div class="container-fluid donHang">
                              <div class="col-md-4">
                                  tmp
                              </div>
                              <div class="col-md-3">
                                     Tổng thanh toán 50000.vnđ <br/>
                              </div>
                              <div class="col-md-5">
                                  Ngày đặt hàng : 20/11/2017<br/>
                                     Trạng thái: Đang chờ
                              </div>
                           </div>
                            </div>
                  </div>
                  <div id="menu1" class="tab-pane fade">
                        <div class="col-md-12 row">
                          <form action="#" method="post" class="beta-form-checkout">
                              <div class="row">
                                      <div class="space20">&nbsp;</div>
                                      
                                      <div class="form-block">
                                          <label for="email">Email address*</label>
                                          <input type="email" id="email" name="edit_email" value="<%= userInfo.email %>" required>
                                      </div>

                                      <div class="form-block">
                                          <label for="your_last_name">Fullname*</label>
                                          <input type="text" id="your_last_name" name="edit_name" value="<%= userInfo.full_name %>" required>
                                      </div>

                                      <div class="form-block">
                                          <label for="adress">Address*</label>
                                          <input type="text" id="adress" name="edit_address" value="<%= userInfo.address %>" required>
                                      </div>
                                      <div class="form-block">
                                          <label for="phone">Phone*</label>
                                          <input type="text" id="phone" name="edit_phone" value="<%= userInfo.phone %>" required>
                                      </div>
                                      <div class="form-block">
                                          <button type="submit" class="btn btn-primary">Update</button>
                                      </div>
                              </div>
                          </form>
                      </div>
                  </div>
                  <div id="menu2" class="tab-pane fade">
                      <div class="space20">&nbsp;</div>
                      <form action="#" method="post">
                          <div class="row">
                              <div class="form-block">
                                  <label for="phone">Mật khẩu hiện tại*</label>
                                  <input type="password" id="phone" name="current_pass" required>
                              </div>
                              <div class="form-block">
                                  <label for="phone">Mật khẩu mới*</label>
                                  <input type="password" id="phone" name="new_pass" required>
                              </div>
                              <div class="form-block">
                                  <label for="phone">Nhập lại mật khẩu mới*</label>
                                  <input type="password" id="phone" name="re_new_pass" required>
                              </div>
                              <div class="form-block">
                                  <button type="submit" class="btn btn-primary">Update Password</button>
                              </div>
                          </div>
                      </form>
                  </div>
                 </div>
          </div>
        </div>
    </div> <!-- .container -->
    <%- include('blocks/footer') %>
    <%- include('blocks/links_javascript') %>
</body>
</html>